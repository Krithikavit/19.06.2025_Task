<body>

    <div class="player">
        <!-- Album Image -->
        <img src="apna-bana-le.jpg" alt="Apna Bana Le" class="album-img" />

        <!-- Headset wires -->
        <div class="headset">
            <div class="wire left"></div>
            <div class="wire right"></div>
        </div>

        <!-- Earbuds -->
        <div class="earbuds">
            <div class="earbud"><marquee behavior="scroll" direction="left">NA LE</marquee></div>
            <div class="earbud"><marquee behavior="scroll" direction="right">NA LE</marquee></div>
        </div>

        <!-- Progress Bar -->
        <div class="progress-container">
            <div class="bar">
                <div class="progress" id="progress"></div>
            </div>
            <div class="time" id="currentTime">00:00</div>
        </div>

        <!-- Controls -->
        <div class="controls">
            <button class="btn" onclick="prev()"><i class="fas fa-backward-step"></i></button>
            <button class="btn" onclick="togglePlay()"><i class="fas fa-play" id="playIcon"></i></button>
            <button class="btn" onclick="next()"><i class="fas fa-forward-step"></i></button>
            <button class="btn" onclick="toggleRepeat()"><i class="fas fa-repeat" id="repeatIcon"></i></button>
        </div>

        <!-- Audio -->
        <audio id="audio" src="apna-bana-le.mp3"></audio>
    </div>

    <script>
        const audio = document.getElementById("audio");
        const playIcon = document.getElementById("playIcon");
        const repeatIcon = document.getElementById("repeatIcon");
        const progress = document.getElementById("progress");
        const currentTime = document.getElementById("currentTime");
        let isRepeat = false;

        function togglePlay() {
            if (audio.paused) {
                audio.play();
                playIcon.classList.replace("fa-play", "fa-pause");
            } else {
                audio.pause();
                playIcon.classList.replace("fa-pause", "fa-play");
            }
        }

        function toggleRepeat() {
            isRepeat = !isRepeat;
            audio.loop = isRepeat;
            repeatIcon.style.color = isRepeat ? "lime" : "white";
        }

        function prev() {
            audio.currentTime = 0;
        }

        function next() {
            audio.currentTime = audio.duration;
        }

        audio.addEventListener("timeupdate", () => {
            const percent = (audio.currentTime / audio.duration) * 100;
            progress.style.width = percent + "%";

            let min = Math.floor(audio.currentTime / 60);
            let sec = Math.floor(audio.currentTime % 60);
            if (sec < 10) sec = "0" + sec;
            currentTime.innerText = `${min}:${sec}`;
        });

        audio.addEventListener("ended", () => {
            playIcon.classList.replace("fa-pause", "fa-play");
        });
    </script>

</body>
